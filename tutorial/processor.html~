	  <script id="testScript" type="text/javascript">
                    	
		function get_log_load(){
                        return lluvia_load = document.getElementById("lluvia_load")
		}
		
		function explain(div, title, text){
		   var whole_html_text = ""
		   if (div){
		     whole_html_text + = title + ": " + text + "<br/>\n"
		     div.innerHTML += whole_html_text
		   }
		}

            function ll_module_included( module_source ){
		   var lluvia_load = get_log_load()
		   explain(get_log_load(), "Module", module_source.module)
		   lluvia_load.innerHTML += module_source.module + " " + "<br/>"
		   lluvia_load.innerHTML += module_source.description + " " + "<br/>"
		   lluvia_load.innerHTML += module_source.path + " " + "<br/>" 
		}

          	function ll_file_included( file_source ){
		   var lluvia_load = get_log_load()
		   var debg_level = "Testing your project with \n\n\tDebug Level: " + $K_debug_level
		   lluvia_load.innerHTML += debg_level + "<br/>"
		   lluvia_load.innerHTML += file_source.name + "<br/>"
		   lluvia_load.innerHTML += file_source.description + "<br/>"
		}

		function ll_test(){
		   var snippets = document.getElementsByName("lluvia_test_code")
		   for (var i=0; i<snippets.length; i++)
		     eval(snippets[i].innerHTML)

		}
