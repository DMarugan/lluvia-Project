	    function Pro(){
	      this.donde = document.getElementById("debug")
	      this.now = new Date()
	    }

	    Pro.prototype.run = function(){
	      this.now = new Date()
	      this.donde.innerHTML = this.now.toString()
	    }

	    hilo = new Pro()

	    processor = new Processor()
	    processor.register(hilo, hilo.run)
	    processor.run()
